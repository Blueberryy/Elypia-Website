{
  "name": "@elypia/elypia-website",
  "version": "1.4.0",
  "description": "The frontend for the Elypia website.",
  "keywords": [
    "angular"
  ],
  "license": "Apache-2.0",
  "author": "Elypia CIC",
  "homepage": "https://elypia.org/",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build --prod --localize",
    "test": "ng test --no-progress --browsers=ChromiumHeadlessNoSandbox",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "xi18n": "ng xi18n --format=xlf --output-path ./locales/ --out-file messages.en-US.xlf",
    "check": "npm run lint && npm run test && npm run e2e && npm run docker:dev",
    "docker:dev": "npm run build && docker build -t elypia/elypia-website:dev .",
    "nginx:dev": "npm run docker:dev && docker run -p 80:80 elypia/elypia-website:dev",
    "postinstall": "ngcc"
  },
  "dependencies": {
    "@angular/animations": "^10.0.2",
    "@angular/cdk": "^9.2.4",
    "@angular/common": "^10.0.2",
    "@angular/compiler": "^10.0.2",
    "@angular/core": "^10.0.2",
    "@angular/forms": "^10.0.2",
    "@angular/localize": "^10.0.2",
    "@angular/material": "^9.2.4",
    "@angular/platform-browser": "^10.0.2",
    "@angular/platform-browser-dynamic": "^10.0.2",
    "@angular/router": "^10.0.2",
    "@elypia/ng-elypian": "^1.1.1",
    "@fortawesome/angular-fontawesome": "^0.6.1",
    "@fortawesome/fontawesome-pro": "^5.13.1",
    "@fortawesome/fontawesome-svg-core": "^1.2.29",
    "@fortawesome/free-brands-svg-icons": "^5.13.1",
    "@fortawesome/pro-duotone-svg-icons": "^5.13.1",
    "@fortawesome/pro-regular-svg-icons": "^5.13.1",
    "@fortawesome/pro-solid-svg-icons": "^5.13.1",
    "@types/sha1": "^1.1.2",
    "core-js": "^2.6.11",
    "ngx-logger": "^4.1.9",
    "ngx-markdown": "^9.1.1",
    "rxjs": "^6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1000.0",
    "@angular/cli": "^10.0.0",
    "@angular/compiler-cli": "^10.0.2",
    "@angular/language-service": "^10.0.2",
    "@schematics/angular": "^9.1.9",
    "@types/jasmine": "^2.8.17",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "^12.12.47",
    "codelyzer": "^5.2.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-spec-reporter": "0.0.32",
    "protractor": "~7.0.0",
    "puppeteer": "^2.1.1",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5"
  }
}
